@model IList<Quiver.Models.PlanoAcaoAEditarRowVM>

@if (Model != null && Model.Count() > 0)
{

    <div id="tabela-plano-Aeditar" tabindex="0" style="overflow: hidden; outline: none;" onload="loadButtons();">
        <div class="table-responsive " tabindex="0" style="outline: none;">
            <table id="data-table-Aeditar" class="table table-striped table-condensed table-vmiddle" aria-busy="false">
                <thead>
                    <tr>
                        <th data-column-id="id" data-type="numeric" data-identifier="true" data-visible="false">ID</th>
                        <th data-column-id="data" data-formatter="rotulo">Data Encontrada</th>
                        <th data-column-id="Avaliacao" data-formatter="rotulo">Inspeção</th>
                        <th data-column-id="Item" data-formatter="usuario" data-header-css-class="usuario-coluna">Item</th>
                        <th data-column-id="NaoConformidade" data-formatter="usuario" data-header-css-class="usuario-coluna">Nao conformidade</th>
                        <th data-column-id="commands" data-formatter="commands" data-sortable="false">Opções</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var row in @Model)
                    {
                        <tr>
                            <td>@row.Id</td>
                            <td>@row.Data.ToShortDateString()</td>
                            <td>@row.Avaliacao</td>
                            <td>@row.Item</td>
                            <td>@row.Alternativa</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}
else
{
    <div class="row">
        <div class="alert alert-danger m-30" role="alert" style="margin-top: 0 !important;">
            <h2><i class="zmdi zmdi-file-text"></i> Nenhum plano de ação a Editar.</h2>
            <p>Não existe nenhum plano de ação a editar com esses parâmetros de busca.</p>
        </div>
    </div>
}
