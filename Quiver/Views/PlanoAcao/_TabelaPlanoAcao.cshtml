@model IList<Quiver.Models.PlanoAcaoRowVM>

@if (Model != null && Model.Count > 0)
{
    <div id="tabela-plano-Atrasado" tabindex="0" style="overflow: hidden; outline: none;" onload="loadButtons();">
        <div class="table-responsive " tabindex="0" style="outline: none;">
            <table id="data-table-Atrasado" class="table table-striped table-condensed table-vmiddle" aria-busy="false">
                <thead>
                    <tr>
                        <th data-column-id="id" data-type="numeric" data-visible="false">ID</th>
                        <th data-column-id="OQue" data-formatter="rotulo">O que?</th>
                        <th data-column-id="Porque" data-formatter="rotulo">Por que?</th>
                        <th data-column-id="Onde" data-formatter="usuario" data-header-css-class="usuario-coluna">Onde?</th>
                        <th data-column-id="Quando" data-formatter="usuario" data-header-css-class="usuario-coluna">Quando?</th>
                        <th data-column-id="Quem" data-formatter="rotulo">Quem?</th>
                        <th data-column-id="Como" data-formatter="rotulo">Como?</th>
                        <th data-column-id="Quanto" data-formatter="rotulo">Quanto?</th>
                        <th data-column-id="commands" data-formatter="commands" data-sortable="false">Opções</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var row in @Model)
                    {
                        <tr>
                            <td>@row.Id</td>
                            <td>@row.OQue</td>
                            <td>@row.Porque</td>
                            <td>@row.Onde</td>
                            <td>@row.Quando.ToShortDateString()</td>
                            <td>@row.Quem</td>
                            <td>@row.Como</td>
                            <td>@row.Quanto</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}
else
{
    <div class="row">
        <div class="alert alert-danger m-30" role="alert" style="margin-top: 0 !important;">
            <h2><i class="zmdi zmdi-file-text"></i> Nenhum plano de ação.</h2>
            <p>Não existe nenhum plano de ação com esses parâmetros de busca.</p>
        </div>
    </div>
}



