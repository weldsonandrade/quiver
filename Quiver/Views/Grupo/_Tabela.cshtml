@model List<Quiver.DTO.Grupo.GrupoDTO>

<div id="tabela" tabindex="0" style="overflow: hidden; outline: none;">
    <div class="table-responsive" tabindex="0" style="overflow: hidden; outline: none;">
        <table id="data-table-command" class="table table-striped table-vmiddle" aria-busy="false">
            <thead>
                <tr>
                    <th data-column-id="id" data-type="numeric" data-visible="false">ID</th>
                    <th data-column-id="nome">Nome</th>
                    <th data-column-id="formularios" data-formatter="formularios">Formulários</th>
                    <th data-column-id="commands" data-formatter="commands" data-sortable="false">Opções</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var row in @Model)
                {
                    string dadosFormularios = "";
                    foreach (var questionarioGrupo in row.Questionarios)
                    {
                        if (questionarioGrupo.Questionario.Excluido == false)
                        {
                            dadosFormularios = dadosFormularios + questionarioGrupo.IdQuestionario + "/" + questionarioGrupo.Questionario.Nome + "|";
                        }
                    }

                    <tr>
                        <td>@row.Id</td>
                        <td>@row.Nome</td>
                        <td>@dadosFormularios</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section scripts
{
    <script type="text/javascript" src="~/Scripts/Custom/grupos.js"></script>
}


